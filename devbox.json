{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": {
    "ruby": "latest",
    "postgresql": {
      "version": "latest",
      "outputs": ["out", "dev"]
    },
    "openssl": {
      "version": "latest",
      "outputs": ["out", "dev"]
    },
    "pkg-config": "latest",
    "libyaml": {
      "version": "latest",
      "outputs": ["out", "dev"]
    },
    "libffi": {
      "version": "latest",
      "outputs": ["out", "dev"]
    }
  },
  "shell": {
    "init_hook": ["echo 'Welcome to devbox!' > /dev/null"],
    "scripts": {
      "test": ["echo \"Error: no test specified\" && exit 1"]
    }
  },
  "env": {
    "PKG_CONFIG_PATH": "$DEVBOX_PACKAGES_DIR/lib/pkgconfig:$PKG_CONFIG_PATH",
    "CPPFLAGS": "-I$DEVBOX_PACKAGES_DIR/include $CPPFLAGS",
    "LDFLAGS": "-L$DEVBOX_PACKAGES_DIR/lib $LDFLAGS",
    "RUBYOPT": "-W0"
  }
}
